{
    "id": "org.kde.khangman",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "khangman",
    "rename-icon": "khangman",
    "finish-args": [
        "--share=network",
        "--socket=pulseaudio",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "libkeduvocdocument",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/education/libkeduvocdocument",
                    "branch": "master"
                }
            ],
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_WITH_QT6=ON"
            ]
        },
        {
            "name": "kdeedu-data",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/education/kdeedu-data",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "khangman",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
